# Caddyfile for Futuuri Hygiei AI

{
    email admin@hygieiai.com  # Email for Let's Encrypt SSL notifications
    auto_https disable_redirects  # Don't auto-redirect HTTP to HTTPS for IP addresses
}

# HTTP listener on port 80 for IP-based access (no SSL)
http:// {
    # Only respond to requests without a proper domain
    @ip_access {
        not host hygieiai.chickenkiller.com
    }
    handle @ip_access {
        reverse_proxy frontend:3000
    }
    
    # For domain requests, allow ACME challenges but don't proxy
    handle {
        # This allows ACME HTTP-01 challenges to work
    }
}

# Production domain configuration (HTTPS)
hygieiai.chickenkiller.com {
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # Enable XSS protection
        X-XSS-Protection "1; mode=block"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # API routes - route to different agents based on path
    handle /api/schedule/* {
        uri strip_prefix /api
        reverse_proxy schedule_agent:8004
    }
    
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }
    
    # Default: serve frontend
    handle {
        reverse_proxy frontend:3000
    }
    
    # Logs
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# API subdomain (commented out - using /api path instead)
# Uncomment only if you create api.hygieiai.chickenkiller.com DNS A record
